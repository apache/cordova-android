<body>

    <div class="main-container">
        <h1>टिक-टैक-टो</h1>

        <!-- मोड चुनने का सेक्शन -->
        <div id="modeSelection">
            <button class="mode-btn" id="vsRobotBtn">रोबोट के साथ खेलें</button>
            <button class="mode-btn" id="vsPlayerBtn">दोस्त के साथ खेलें</button>
        </div>

        <!-- गेम का मुख्य हिस्सा (शुरुआत में छिपा हुआ) -->
        <div id="gameContainer">
            <!-- गेम बोर्ड -->
            <div class="board" id="board">
                <div class="cell" data-cell></div>
                <div class="cell" data-cell></div>
                <div class="cell" data-cell></div>
                <div class="cell" data-cell></div>
                <div class="cell" data-cell></div>
                <div class="cell" data-cell></div>
                <div class="cell" data-cell></div>
                <div class="cell" data-cell></div>
                <div class="cell" data-cell></div>
            </div>

            <!-- गेम स्टेटस -->
            <div class="status" id="statusMessage"></div>

            <!-- बटन -->
            <div class="button-container">
                <button class="action-btn" id="restartButton">फिर से खेलें</button>
                <button class="action-btn" id="changeModeButton">मोड बदलें</button>
            </div>
        </div>
    </div>

    <script>
        // DOM एलिमेंट्स
        const modeSelection = document.getElementById('modeSelection');
        const gameContainer = document.getElementById('gameContainer');
        const vsRobotBtn = document.getElementById('vsRobotBtn');
        const vsPlayerBtn = document.getElementById('vsPlayerBtn');
        
        const cellElements = document.querySelectorAll('[data-cell]');
        const board = document.getElementById('board');
        const statusMessage = document.getElementById('statusMessage');
        const restartButton = document.getElementById('restartButton');
        const changeModeButton = document.getElementById('changeModeButton');

        let gameActive = false;
        let currentPlayer = 'X';
        let gameState = ["", "", "", "", "", "", "", "", ""];
        let gameMode = 'player'; // 'player' या 'robot'
        const PLAYER_X = 'X';
        const PLAYER_O = 'O'; // रोबोट हमेशा 'O' होगा

        // जीतने के कॉम्बिनेशन्स
        const winningCombinations = [
            [0, 1, 2], [3, 4, 5], [6, 7, 8], // Rows
            [0, 3, 6], [1, 4, 7], [2, 5, 8], // Columns
            [0, 4, 8], [2, 4, 6]  // Diagonals
        ];

        // --- मोड सिलेक्शन ---
        
        vsRobotBtn.addEventListener('click', () => {
            gameMode = 'robot';
            startGameScreen();
        });

        vsPlayerBtn.addEventListener('click', () => {
            gameMode = 'player';
            startGameScreen();
        });

        function startGameScreen() {
            modeSelection.style.display = 'none';
            gameContainer.style.display = 'flex';
            startGame();
        }

        changeModeButton.addEventListener('click', () => {
            gameContainer.style.display = 'none';
            modeSelection.style.display = 'flex';
        });

        // --- गेम का लॉजिक ---

        function startGame() {
            gameActive = true;
            currentPlayer = PLAYER_X;
            gameState = ["", "", "", "", "", "", "", "", ""];
            statusMessage.textContent = `खिलाड़ी ${currentPlayer} की बारी`;
            
            cellElements.forEach(cell => {
                cell.textContent = '';
                cell.classList.remove(PLAYER_X.toLowerCase(), PLAYER_O.toLowerCase());
                cell.removeEventListener('click', handleCellClick); // पुराने लिसनर हटाएं
                cell.addEventListener('click', handleCellClick, { once: true });
            });
        }

        function handleCellClick(e) {
            // टच इवेंट पर ज़ूमिंग रोकें
            e.preventDefault(); 
            
            const cell = e.target;
            const cellIndex = Array.from(cellElements).indexOf(cell);

            // अगर सेल पहले से भरा है या गेम खत्म हो गया है, तो कुछ न करें
            if (gameState[cellIndex] !== "" || !gameActive) {
                return;
            }

            // सेल को अपडेट करें
            updateCell(cell, cellIndex);
            
            // विजेता की जाँच करें
            if (checkWinner()) {
                endGame(false);
                return;
            }

            // ड्रॉ की जाँच
            if (isDraw()) {
                endGame(true);
                return;
            }

            // खिलाड़ी बदलें
            switchPlayer();

            // अगर रोबोट मोड है और रोबोट की बारी है
            if (gameMode === 'robot' && currentPlayer === PLAYER_O && gameActive) {
                // रोबोट की चाल के लिए थोड़ा समय दें
                statusMessage.textContent = `रोबोट (O) सोच रहा है...`;
                setTimeout(robotMove, 500);
            }
        }

        function updateCell(cell, index) {
            gameState[index] = currentPlayer;
            cell.textContent = currentPlayer;
            cell.classList.add(currentPlayer.toLowerCase());
        }

        function switchPlayer() {
            currentPlayer = currentPlayer === PLAYER_X ? PLAYER_O : PLAYER_X;
            statusMessage.textContent = `खिलाड़ी ${currentPlayer} की बारी`;
        }

        function checkWinner() {
            let roundWon = false;
            for (let i = 0; i < winningCombinations.length; i++) {
                const [a, b, c] = winningCombinations[i];
                if (gameState[a] && gameState[a] === gameState[b] && gameState[a] === gameState[c]) {
                    roundWon = true;
                    break;
                }
            }
            return roundWon;
        }

        function isDraw() {
            return !gameState.includes("");
        }

        function endGame(isDraw) {
            gameActive = false;
            if (isDraw) {
                statusMessage.textContent = "गेम ड्रॉ हो गया!";
            } else {
                statusMessage.textContent = `खिलाड़ी ${currentPlayer} जीत गया!`;
            }
            // गेम खत्म होने पर क्लिक लिसनर्स हटा दें
            cellElements.forEach(cell => {
                cell.removeEventListener('click', handleCellClick);
            });
        }

        restartButton.addEventListener('click', startGame);

        // --- रोबोट (AI) का लॉजिक ---

        function robotMove() {
            if (!gameActive) return;

            let bestMove = findBestMove();
            
            // अगर कोई चाल नहीं मिली (जो नहीं होना चाहिए)
            if (bestMove === null) {
                 // बस कोई भी खाली जगह ढूंढो
                bestMove = gameState.indexOf("");
            }
            
            if (bestMove !== -1) {
                const cell = cellElements[bestMove];
                
                updateCell(cell, bestMove);
                cell.removeEventListener('click', handleCellClick); 

                if (checkWinner()) {
                    endGame(false);
                    return;
                }
                if (isDraw()) {
                    endGame(true);
                    return;
                }

                // खिलाड़ी को वापस X पर स्विच करें
                switchPlayer();
            }
        }

        function findBestMove() {
            // 1. क्या रोबोट (O) जीत सकता है?
            let winningMove = findWinningMove(PLAYER_O);
            if (winningMove !== null) return winningMove;

            // 2. क्या खिलाड़ी (X) जीतने वाला है? (ब्लॉक करें)
            let blockingMove = findWinningMove(PLAYER_X);
            if (blockingMove !== null) return blockingMove;

            // 3. केंद्र (Center) लें (इंडेक्स 4)
            if (gameState[4] === "") {
                return 4;
            }

            // 4. कोई कोना (Corner) लें
            const corners = [0, 2, 6, 8];
            const availableCorners = corners.filter(index => gameState[index] === "");
            if (availableCorners.length > 0) {
                return availableCorners[Math.floor(Math.random() * availableCorners.length)];
            }

            // 5. कोई किनारा (Side) लें
            const sides = [1, 3, 5, 7];
            const availableSides = sides.filter(index => gameState[index] === "");
            if (availableSides.length > 0) {
                return availableSides[Math.floor(Math.random() * availableSides.length)];
            }
            
            return null; 
        }

        function findWinningMove(player) {
            for (let i = 0; i < gameState.length; i++) {
                if (gameState[i] === "") {
                    // चाल चल कर देखें
                    gameState[i] = player;
                    
                    if (checkWinner()) {
                        gameState[i] = ""; // चाल वापस लें
                        return i;
                    }
                    
                    gameState[i] = ""; // चाल वापस लें
                }
            }
            return null;
        }

    </script>

</body>
</html>


