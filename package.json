{
  "name": "cordova-android",
  "version": "10.0.0-dev",
  "description": "cordova-android release",
  "bin": {
    "create": "bin/create"
  },
  "main": "bin/templates/cordova/Api.js",
  "repository": "github:apache/cordova-android",
  "bugs": "https://github.com/apache/cordova-android/issues",
  "keywords": [
    "android",
    "cordova",
    "apache"
  ],
  "scripts": {
    "test": "npm run lint && npm run cover && npm run java-unit-tests",
    "lint": "eslint . \"bin/**/!(*.*|gitignore)\"",
    "unit-tests": "jasmine --config=spec/unit/jasmine.json",
    "cover": "nyc jasmine --config=spec/coverage.json",
    "e2e-tests": "jasmine --config=spec/e2e/jasmine.json",
    "java-unit-tests": "node test/run_java_unit_tests.js",
    "clean:java-unit-tests": "node test/clean.js"
  },
  "author": "Apache Software Foundation",
  "license": "Apache-2.0",
  "dependencies": {
    "android-versions": "^1.6.0",
    "cordova-common": "^4.0.2",
    "execa": "^5.0.0",
    "fast-glob": "^3.2.5",
    "fs-extra": "^9.1.0",
    "is-path-inside": "^3.0.3",
    "nopt": "^5.0.0",
    "properties-parser": "^0.3.1",
    "semver": "^7.3.5",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@cordova/eslint-config": "^3.0.0",
    "jasmine": "^3.7.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nyc": "^15.1.0",
    "rewire": "^5.0.0"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "nyc": {
    "include": [
      "bin/lib/**",
      "bin/templates/cordova/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
